API_REQUEST_DELAY=1.0

# File Analysis Settings
MEGALINTER_TIMEOUT=300
SEMGREP_TIMEOUT=180
ASTGREP_TIMEOUT=120

# Optional API Keys
LIBRARIES_IO_API_KEY=your_libraries_io_api_key_here